pipeline {
    agent any
    environment {
        IMAGE_TAG = "pratibha2830/igpapp:${BUILD_NUMBER}"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: https://github.com/pratibhasahu03/ABCTechnology_Aug0208.git'
            }
        }
        stage('Build & Push Docker Image') {
            steps {
                sh '''
                  ansible-playbook playbooks/build-and-run.yml \
                  -e IMAGE_TAG=${IMAGE_TAG} \
                  -e push_image=true
                '''
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                  ansible-playbook playbooks/deploy-k8s.yml \
                  -e IMAGE_TAG=${IMAGE_TAG}
                '''
            }
        }
    }
}
